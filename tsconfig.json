{
  "compilerOptions": {
    "outDir": "./dist/",
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "allowJs": true,
    "alwaysStrict": true,
    "strictPropertyInitialization": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "lib": [
      "esnext",
      "es7",
      "es6",
      "es5",
      "es2015.promise",
      "es2015.generator",
      "dom"
    ],
    "rootDirs": ["./src"],
    "baseUrl":  "./src",
    "paths": {
      "@view/*": ["view/*"],
      "@/*": ["components/*"],
      "@src/*": ["/*"]
    },
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "pretty": true
  },
  "include": [
    "./src/**/*"
  ]
}